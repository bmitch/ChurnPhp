{
    "name": "bmitch/churn-php",
    "description": "Discover files in need of refactoring.",
    "keywords": [
        "bmitch",
        "churn-php"
    ],
    "homepage": "https://github.com/bmitch/churn-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Bill Mitchell",
            "email": "wkmitch@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "composer/package-versions-deprecated": "^1.11",
        "php-di/php-di": "^6.0",
        "symfony/console": "^3.4 || ^4.0 || ^5.0",
        "symfony/process": "^3.4 || ^4.0 || ^5.0",
        "symfony/yaml": "^3.4 || ^4.0 || ^5.0",
        "tightenco/collect": "^5.4",
        "webmozart/assert": "^1.2"
    },
    "require-dev": {
        "bmitch/codor": "dev-master",
        "mockery/mockery": "^1.2.0",
        "php-parallel-lint/php-console-highlighter": "^0.5.0",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phploc/phploc": ">=4.0",
        "phpmd/phpmd": "^2.5",
        "phpunit/phpunit": "^7.5.20",
        "sebastian/phpcpd": "^4.0",
        "slevomat/coding-standard": "^3.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Churn\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Churn\\Tests\\": "tests"
        }
    },
    "bin": [
        "bin/churn"
    ],
    "scripts": {
        "fix": [
            "phpcbf -n --standard=phpcs.xml src/",
            "phpcbf --standard=codor.xml src -spn",
            "phpcbf --standard=psr2 src -sp"
        ],
        "test": [
            "@test-common",
            "phpcs --standard=psr2 src -spn",
            "phpcs --standard=phpcs.xml src -spn",
            "phpcs --standard=codor.xml src -spn"
        ],
        "test-ci": [
            "@test-common"
        ],
        "test-common": [
            "@composer validate --strict",
            "parallel-lint src tests",
            "phpmd src text phpmd.xml",
            "phploc src",
            "phpcpd src",
            "phpunit --colors=always --testdox --coverage-clover=coverage.xml",
            "@php bin/churn run src -p -vvv"
        ]
    }
}
